@model Repairis.DeviceCategories.Dto.DeviceCategoryFullEntityDto
@{
    ViewBag.Title = L("EditDeviceCategory");
}

<div>
    <a asp-action="Index">@L("BackToList")</a>
</div>
<h3>@L("EditDeviceCategory")</h3>
<hr/>
<form asp-action="Edit" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label asp-for="DeviceCategoryName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DeviceCategoryName" class="form-control" />
                <span asp-validation-for="DeviceCategoryName" class="text-danger"></span>
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" checked /> @L("Enabled")
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@L("Save")" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

