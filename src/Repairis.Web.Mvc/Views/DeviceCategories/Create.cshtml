@model Repairis.DeviceCategories.Dto.DeviceCategoryBasicEntityDto
@{
    ViewBag.Title = L("CreateNewDeviceCategory");
}
<div>
    <a asp-action="Index">@L("BackToList")</a>
</div>
<h3>@L("CreateNewDeviceCategory")</h3>
<hr />
<form asp-controller="DeviceCategories" asp-action="Create" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="DeviceCategoryName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DeviceCategoryName" class="form-control" />
                <span asp-validation-for="DeviceCategoryName" class="text-danger"></span>
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" checked /> @L("Enabled")
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@L("Create")" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
