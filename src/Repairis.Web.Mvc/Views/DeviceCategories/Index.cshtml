@model Repairis.DeviceCategories.Dto.DeviceCategoryBasicListDto

@{
    ViewBag.Title = "Device Categories";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeviceCategories)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.DeviceCategories) {
    <tr>
        <td>
            @Html.ActionLink(item.DeviceCategoryName, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
