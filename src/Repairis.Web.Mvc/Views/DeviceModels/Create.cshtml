@model Repairis.DeviceModels.Dto.CreateDeviceModelViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DeviceModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })      
        <div class="form-group">
            @Html.LabelFor(model => model.DeviceModelInput.BrandName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EJ().AutocompleteFor(model => model.DeviceModelInput.BrandName).AutocompleteFields(f => f.Text("BrandName")).Datasource(Model.DeviceModelViewBagDto.Brands).ShowPopupButton()
                @Html.ValidationMessageFor(model => model.DeviceModelInput.BrandName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceModelInput.DeviceCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EJ().AutocompleteFor(model => model.DeviceModelInput.DeviceCategoryName).AutocompleteFields(f => f.Text("DeviceCategoryName")).Datasource(Model.DeviceModelViewBagDto.DeviceCategories).ShowPopupButton()
                @Html.ValidationMessageFor(model => model.DeviceModelInput.DeviceCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceModelInput.DeviceModelName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EJ().AutocompleteFor(model => model.DeviceModelInput.DeviceModelName).Datasource(Model.DeviceModelViewBagDto.DeviceModels).AutocompleteFields(f => f.Text("DeviceModelName").GroupBy("Brand.BrandName")).ShowPopupButton()
                @Html.ValidationMessageFor(model => model.DeviceModelInput.DeviceModelName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>