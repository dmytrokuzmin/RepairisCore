@model Repairis.DeviceModels.Dto.DeviceModelBasicListDto

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(L("Create New"), "Create", null, new {@class = "btn btn-primary"})
</p>
<table class="table">
@foreach (var item in Model.DeviceModels) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceModelName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
