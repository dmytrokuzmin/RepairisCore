@model Repairis.DeviceModels.Dto.DeviceModelBasicEntityDto

@{
    var deviceModelName = "{Model.DeviceCategoryName} {Model.BrandName} {Model.DeviceModelName}";
    ViewBag.Title = $"Details: {deviceModelName}";
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
<h3>Edit device model @deviceModelName</h3>
<hr />
<form asp-action="Details" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label asp-for="DeviceCategoryName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DeviceCategoryName" class="form-control" disabled/>
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BrandName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="BrandName" class="form-control" disabled/>
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DeviceModelName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DeviceModelName" class="form-control" disabled/>
                <span asp-validation-for="BrandName" class="text-danger"></span>
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive"/> @L("IsActive")
                    </label>
                </div>
            </div>
        </div>
    </div>
</form>

