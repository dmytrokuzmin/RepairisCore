@model Repairis.Orders.Dto.CreateOrderInput
@inject Repairis.Web.Helpers.IFormHelper FormHelper
@{
    ViewBag.Title = L("CreateNewOrder");
}
<div>
    <a asp-action="Index">@L("BackToList")</a>
</div>
<h3>@L("CreateNewOrder")</h3>
<hr />
<form asp-controller="Orders" asp-action="Create" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>@L("DeviceModel")</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label asp-for="Device.DeviceCategoryName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <ej-autocomplete id="DeviceCategoryName" ej-for="Device.DeviceCategoryName" datasource="await FormHelper.GetDeviceCategories()" show-popup-button="true" filter-type="@FilterOperatorType.Contains" highlight-search="true" width="100%" allow-add-new="true" change="updateDeviceCategory" select="updateDeviceCategory">
                            <e-autocomplete-fields text="Text" key="Text" />
                        </ej-autocomplete>              
                        <span asp-validation-for="Device.DeviceCategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Device.BrandName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <ej-autocomplete id="BrandName" ej-for="Device.BrandName" datasource="await FormHelper.GetBrands()" show-popup-button="true" filter-type="@FilterOperatorType.Contains" highlight-search="true" width="100%" allow-add-new="true" change="updateBrand" select="updateBrand">
                            <e-autocomplete-fields text="Text" key="Text" />
                        </ej-autocomplete>
                        <span asp-validation-for="Device.BrandName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Device.DeviceModelName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <ej-autocomplete id="DeviceModelName" ej-for="Device.DeviceModelName" show-popup-button="true" filter-type="@FilterOperatorType.Contains" highlight-search="true" width="100%" allow-add-new="true">
                            <e-autocomplete-fields text="DeviceModelName" key="DeviceModelName"/>
                            <e-datamanager url="/api/DeviceModels/" adaptor="UrlAdaptor" offline="false" />
                        </ej-autocomplete>
                        <span asp-validation-for="Device.DeviceModelName" class="text-danger"></span>
                    </div>
                </div>              
                <div class="form-group">
                    <label asp-for="Device.SerialNumber" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Device.SerialNumber" class="form-control" />
                        <span asp-validation-for="Device.SerialNumber" class="text-danger"></span>
                    </div>
                </div>    
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>@L("AdditionalEquipmentAndIssue")</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label asp-for="AdditionalEquipment" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="AdditionalEquipment" class="form-control" />
                        <span asp-validation-for="AdditionalEquipment" class="text-danger"></span>
                    </div>
                </div>  
                <div class="form-group">
                    <label asp-for="IssueDescription" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="IssueDescription" class="form-control" />
                        <span asp-validation-for="IssueDescription" class="text-danger"></span>
                    </div>
                </div>  
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>@L("Customer")</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label asp-for="Customer.CustomerType" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="Customer.CustomerType" asp-items="Html.GetEnumSelectList<Repairis.Authorization.Users.CustomerType>()" class="form-control" ></select>
                        <span asp-validation-for="Customer.CustomerType" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    <label asp-for="Customer.Surname" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.Surname" class="form-control" />
                        <span asp-validation-for="Customer.Surname" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    <label asp-for="Customer.Name" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.Name" class="form-control" />
                        <span asp-validation-for="Customer.Name" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    <label asp-for="Customer.FatherName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.FatherName" class="form-control" />
                        <span asp-validation-for="Customer.FatherName" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    <label asp-for="Customer.PhoneNumber" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    <label asp-for="Customer.SecondaryPhoneNumber" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.SecondaryPhoneNumber" class="form-control" />
                        <span asp-validation-for="Customer.SecondaryPhoneNumber" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    <label asp-for="Customer.EmailAddress" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.EmailAddress" class="form-control" />
                        <span asp-validation-for="Customer.EmailAddress" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    <label asp-for="Customer.Address" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.Address" class="form-control" />
                        <span asp-validation-for="Customer.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.AdditionalInfo" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Customer.AdditionalInfo" class="form-control" />
                        <span asp-validation-for="Customer.AdditionalInfo" class="text-danger"></span>
                    </div>
                </div> 
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>@L("AdditionalOrderInfo")</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label asp-for="AdditionalNotes" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="AdditionalNotes" class="form-control" />
                        <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
                        <div class="checkbox">
                            <label>
                                <input asp-for="IsUrgent" /> @L("Urgent")
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input asp-for="IsWarrantyComplaint" /> @L("WarrantyComplaint")
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@L("Create")" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


<script type="text/javascript">
    function updateDeviceCategory(args) {               
        var dmObj = $("#DeviceModelName").ejAutocomplete("instance");
        var headers = dmObj.model.dataSource.dataSource.headers;
        if (!headers) {
            dmObj.model.dataSource.dataSource.headers = [];
        }
        delete headers["deviceCategoryName"];
        headers.push({ "deviceCategoryName": args.value});
    }

    function updateBrand(args) {
        var dmObj = $("#DeviceModelName").ejAutocomplete("instance");
        var headers = dmObj.model.dataSource.dataSource.headers;
        if (!headers) {
            dmObj.model.dataSource.dataSource.headers = [];
        }
        delete headers["brandName"];
        headers.push({ "brandName": args.value });
    }
</script>

