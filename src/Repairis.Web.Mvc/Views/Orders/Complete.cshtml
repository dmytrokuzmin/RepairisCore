@model Repairis.Orders.Dto.OrderCompletionDto

@{
    ViewBag.Title = "Complete Order";
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
<h3>Complete order #@Model.Id</h3>
<hr/>
<form asp-action="Complete" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Device pickup date and warranty:</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label asp-for="DevicePickupDate" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="DevicePickupDate" class="form-control" />
                        <span asp-validation-for="DevicePickupDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="WarrantyMonths" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="WarrantyMonths" class="form-control" />
                        <span asp-validation-for="WarrantyMonths" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Total order price: @(Model.SparePartsUsed.Sum(x => x.PricePerItem * x.Quantity) + Model.RepairPrice) @L("CurrencyCode")</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label asp-for="CustomerFullName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="CustomerFullName" class="form-control" />
                        <span asp-validation-for="CustomerFullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CreationTime" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="CreationTime" class="form-control" />
                        <span asp-validation-for="CreationTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AdditionalEquipment" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="AdditionalEquipment" class="form-control" />
                        <span asp-validation-for="AdditionalEquipment" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="RepairPrice" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="RepairPrice" class="form-control" />
                        <span asp-validation-for="RepairPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">@L("SparePartTotalCount")</label>
                    <div class="col-md-10">
                        <div class="form-control">@Model.SparePartsUsed.Sum(x => x.Quantity) @L("pcs")</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">@L("SparePartTotalPrice")</label>
                    <div class="col-md-10">
                        <div class="form-control">@Model.SparePartsUsed.Sum(x => x.PricePerItem * x.Quantity) @L("CurrencyCode")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Complete" class="btn btn-default" />
        </div>
    </div>
</form>

